<?xml version="1.0" ?>

<!-- adapted from Daniel Mellinger, Nathan Michael, Vijay Kumar, "Trajectory Generation and Control for Precise Aggressive Maneuvers with Quadrotors" -->

<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://drake.mit.edu ../../../../pods/drake/doc/drakeURDF.xsd" name="quadrotor">

  <link name="zerolink"/>

  <link name="rope">
    <inertial>
      <mass value="0.005" />
      <origin xyz="0 0 -0.4" />
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" />
    </inertial>
    <visual>
      <origin xyz="0 0 -0.4" />
      <geometry>
        <cylinder length="0.8" radius="0.0025" />
      </geometry>
      <material name="red">
        <color rgba="0.8 0 0 1" />
      </material>
    </visual>
  </link>

  <joint name="jointy" type="continuous">
    <origin xyz="0 0 0" />
    <parent link="zerolink" />
    <child link="rope" />
    <axis xyz="0 1 0" />
  </joint>

  <link name="load">
    <inertial>
      <mass value="0.05" />
      <origin xyz="0 0 -0.025" />
      <inertia ixx="0.0000125" ixy="0.0" ixz="0.0" iyy="0.0000125" iyz="0.0" izz="0.0000125" />
    </inertial>
    <visual>
      <origin xyz="0 0 -0.025" />
      <geometry>
        <sphere radius="0.025" />
      </geometry>
      <material name="red" />
    </visual>
  </link>

  <joint name="load_fix" type="fixed">
    <origin xyz="0 0 -0.8" />
    <parent link="rope" />
    <child link="load" />
  </joint>
</robot>

